@model ControlIDMvc.Dtos.Egreso.EgresoCreateDto
@{
    Layout = "_Layout";

    ViewData["Title"] = "Crear Egreso";
    string format = "yyyy/MM/dd";
    var now = DateTime.Now.ToString(format);
}

@Html.AntiForgeryToken()
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3><span class="text-danger">@ViewData["ErrorConexion"]</span></h3>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12 ">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Nueva Gasto</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Informacion general<small></small></h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <form asp-action="Store" asp-antiforgery="true" id="formulario_egreso"
                            enctype="multipart/form-data">
                            @Html.AntiForgeryToken()
                            <input type="text" id="UsuarioId" name="UsuarioId" value='@ViewData["usuarioId"]'
                                class="form-control" hidden>
                            <div class="col-md-12 col-sm-12">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="item form-group">
                                            <label class="col-form-label col-md-3 col-sm-3"
                                                for="FechaCreacion">Fecha<span class="required">*</span>
                                            </label>
                                            <div class="col-md-9 col-sm-9">
                                                <input type="text" name="FechaCreacion" id="FechaCreacion"
                                                    class="form-control" placeholder="" value="@now" readonly>
                                                <span asp-validation-for="FechaCreacion" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="item form-group">
                                            <label class="col-form-label col-md-3 col-sm-3" for="Usuario">Usuario*
                                            </label>
                                            <div class="col-md-9 col-sm-9">
                                                <input type="text" name="NombreUsuario" id="NombreUsuario"
                                                    class="form-control" value='@ViewData["usuario"]'
                                                    placeholder="Usuario" readonly>
                                                <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="item form-group">
                                            <label class="col-form-label col-md-3 col-sm-3" for="NumeroRecibo">Numero
                                                recibo<span class="required">*</span>
                                            </label>
                                            <div class="col-md-9 col-sm-9">
                                                <input type="text" name="NumeroRecibo" id="NumeroRecibo"
                                                    value='@ViewData["numeroRecibo"]' class="form-control"
                                                    placeholder="" readonly>
                                                <span asp-validation-for="NumeroRecibo" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="item form-group">
                                            <label class="col-form-label col-md-3 col-sm-3" for="Monto">Monto<span
                                                    class="required">*</span>
                                            </label>
                                            <div class="col-md-9 col-sm-9">
                                                <input type="text" name="Monto" id="Monto" class="form-control"
                                                    placeholder="">
                                                <span asp-validation-for="Monto" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12 col-sm-12">
                                        <div class="item form-group">
                                            <label class="col-form-label col-md-2 col-sm-2" for="Concepto">Concepto*
                                            </label>
                                            <div class="col-md-10 col-sm-10">
                                                <textarea type="text" name="Concepto" id="Concepto" class="form-control"
                                                    placeholder="Concepto"></textarea>
                                                <span asp-validation-for="Concepto" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="item form-group">
                                            <label class="col-form-label col-md-3 col-sm-3" for="Persona">Entregado a *
                                            </label>
                                            <div class="col-md-9 col-sm-9">
                                                <input type="text" name="Persona" id="Persona" class="form-control"
                                                    placeholder="Entregado a ..">
                                                <span asp-validation-for="Persona" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="d-flex justify-content-center">
                                    <button class="btn btn-primary" type="button">Cancelar</button>
                                    <button type="submit" class="btn btn-success" id="guardar_egreso">Guardar</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@{
    ViewData["Title"] = "PriviewInscripcion";
}

<style>
    .pdfobject-container {
        height: 30rem;
        border: 1rem solid rgba(0, 0, 0, .1);
    }
</style>
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3><span class="text-danger"></span></h3>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12 ">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Recibo y factura</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_panel">
                    <div class="x_content">
                        <form asp-action="StoreInscripcion" asp-antiforgery="true" id="formulario_recibo"
                            enctype="multipart/form-data">
                            @Html.AntiForgeryToken()
                            <div class="row">
                                <div class="col-md-6 ">
                                    <div class="x_title">
                                        <h2>Recibo<small></small></h2>
                                        <div class="clearfix"></div>
                                    </div>
                                    <div class="ratio w-100">
                                        <div id="factura"></div>
                                    </div>
                                </div>
                                <div class="col-md-6 w-100">
                                    <div class="x_title">
                                        <h2>Factura<small></small></h2>
                                        <div class="clearfix"></div>
                                    </div>
                                    <div class="ratio w-100">
                                        <div id="recibo"></div>
                                    </div>
                                </div>
                            </div>
                            <br>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="d-flex justify-content-center">
                                        <button type="submit" class="btn btn-success" id="guardar_inscripcion">Volver a
                                            la lista</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
<script src="https://cdn.jsdelivr.net/npm/pdfobject@2.2.8/pdfobject.min.js"></script>
<script>PDFObject.embed("https://www.dspguide.com/CH1.PDF", "#factura");</script>
<script>PDFObject.embed("https://www.dspguide.com/CH1.PDF", "#recibo");</script>
}

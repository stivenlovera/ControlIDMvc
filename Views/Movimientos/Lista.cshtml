@{
    ViewData["Title"] = "Lista Movimientos";
}
<style>
    td.details-control {
        background: url('https://www.datatables.net/examples/resources/details_open.png') no-repeat center center;
        cursor: pointer;
    }

    tr.details td.details-control {
        background: url('https://www.datatables.net/examples/resources/details_close.png') no-repeat center center;
    }
</style>
<div class="right_col" role="main">
    <div class="page-title">
        <div class="title_left">
            <h3>Lista Movimientos</h3>
        </div>
    </div>

    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12 ">
            @if (ViewData["message"] != null)
            {
                <div class="alert alert-success alert-dismissible " role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                        aria-hidden="true">Ã—</span>
                    </button>
                    @ViewData["message"]
                </div>
            }
            <div class="x_panel">
                <div class="x_title">
                    <h2>Lista de Movimientos</small></h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card-box table-responsive">
                                <div class="buttons">
                                    <a class="btn btn-secondary btn-xs" asp-controller="ReciboEgreso"
                                        asp-action="CreateEgreso" role="button">Crear Egreso <i
                                            class="fa fa-plus"></i></a>
                                    <a class="btn btn-secondary btn-xs" asp-controller="ReciboEgreso"
                                        asp-action="CreateEgreso" role="button">Crear Ingreso <i
                                            class="fa fa-plus"></i></a>
                                    <!-- Standard button -->
                                    <div class="row">
                                        <div class="col-md-6">

                                        </div>
                                        <div class="col-md-6">

                                        </div>
                                    </div>
                                </div>

                                <table id="datatable" class="table table-striped table-bordered bulk_action"
                                    style="width:100%">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th>Usuario</th>
                                            <th>N. recibo</th>
                                            <th>Fecha</th>
                                            <th>Tipo movimiento</th>
                                            <th>Receptor</th>
                                            <th>Monto</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<!-- Datatables -->

<script src="~/assets/vendors/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="~/assets/vendors/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
<script src="~/assets/vendors/datatables.net-buttons/js/dataTables.buttons.min.js"></script>
<script src="~/assets/vendors/datatables.net-buttons-bs/js/buttons.bootstrap.min.js"></script>
<script src="~/assets/vendors/datatables.net-buttons/js/buttons.flash.min.js"></script>
<script src="~/assets/vendors/datatables.net-buttons/js/buttons.html5.min.js"></script>
<script src="~/assets/vendors/datatables.net-buttons/js/buttons.print.min.js"></script>
<script src="~/assets/vendors/datatables.net-fixedheader/js/dataTables.fixedHeader.min.js"></script>
<script src="~/assets/vendors/datatables.net-keytable/js/dataTables.keyTable.min.js"></script>
<script src="~/assets/vendors/datatables.net-responsive/js/dataTables.responsive.min.js"></script>
<script src="~/assets/vendors/datatables.net-responsive-bs/js/responsive.bootstrap.js"></script>
<script src="~/assets/vendors/datatables.net-scroller/js/dataTables.scroller.min.js"></script>

<script>
    table = $("#datatable").DataTable({
        // ServerSide Setups
        processing: true,
        serverSide: true,
        // Paging Setups
        paging: true,
        filter: true,
        order: [],
        ajax: {
            url: "movimientos/data-table",
            type: "POST",

        },
        columns: [
            {
                class: 'details-control',
                orderable: false,
                data: null,
                defaultContent: '',
            },
            {
                name: "usuario",
                data: "usuario"
            },
            {
                name: "numeroRecibo",
                data: "numeroRecibo"
            },
            {
                name: "fecha",
                data: "fecha"
            },
            {
                name: "tipoMovimiento",
                data: "tipoMovimiento"
            },
            {
                name: "receptor",
                data: "receptor"
            },
            {
                name: "montoTotal",
                data: "montoTotal"
            },
            {
                name: "id",
                data: "id",
                render: function (data, type, row) {
                    let url;
                    if (row.tipoMovimiento == 'egreso') {
                        url = `recibo-egreso/editar/${data}`;
                    }
                    else {
                        url = `recibo-ingreso/editar/${data}`;
                    }
                    return `
                    <a class="btn btn-success btn-xs" href="${url}" role="button"><i class="fa fa-file-pdf-o" title="Editar"></i></a>
                    <a class="btn btn-success btn-xs" href="${url}" role="button"><i class="fa fa-pencil" title="Ver recibo"></i></a>
                    <button class="btn btn-danger btn-xs delete" data-id="${data}" role="button"><i class="fa fa-trash" title="Eliminar"></i></button>
                    `;
                }
            }
        ]
    });
    var detailRows = [];
    $('#datatable tbody').on('click', 'tr td.details-control', function () {
        var tr = $(this).closest('tr');
        var row = table.row(tr);
        var idx = detailRows.indexOf(tr.attr('id'));

        if (row.child.isShown()) {

            tr.removeClass('details');
            row.child.hide();

            // Remove from the 'open' array
            detailRows.splice(idx, 1);
        } else {
            tr.addClass('details');
            /*EJECUACION AJAX*/
            $.ajax({
                type: "GET",
                url: `/movimientos/detail/${row.data().id}`,
                dataType: "json",
                success: function (response) {
                    if (response.status == 'success') {
                        row.child(format(response)).show();
                    } else {
                        row.child(format(response)).show();
                    }
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    error_status(jqXHR);
                },
                fail: function (response) {
                    fail()
                }
            });
            // Add to the 'open' array
            if (idx === -1) {
                detailRows.push(tr.attr('id'));
            }
        }
    });
    function format(response) {
        if (response.status == 'success') {
            let asientos = ``;
            response.data.forEach(asiento => {
                let planes = ``;
                asiento.planAsientos.forEach(plan => {
                    planes += `
                        <tr>
                            <td>${plan.planId}</td>
                            <td>${plan.planCuenta}</td>
                            <td>${plan.debe}</td>
                            <td>${plan.haber}</td>
                        </tr>
                    `;
                });
                let table = `
                    <table class="table table-bordered "
                        style="width:100%">
                        <thead>
                            <tr>
                                <th>Plan</th>
                                <th>Plan Nombre</th>
                                <th>Debe</th>
                                <th>Haber</th>
                            </tr>
                        </thead>
                        <tbody>
                            ${planes}
                        </tbody>
                    </table>
                `;
                asientos += `
                <h6>
                    <strong>Concepto:</strong> ${asiento.nombreAsiento}  
                    <strong>Monto:</strong> ${asiento.monto.toFixed(2)} 
                    <strong>Facturacion:</strong> No diponible
                </h6>
                ${table} 
                `;
            });
            return asientos;
        }
    }
</script>
<script src="~/js/Inscripcion/delete.js"></script>
}
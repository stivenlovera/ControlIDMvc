@using Microsoft.AspNetCore.Identity

<div class="col-md-3 left_col">
    <div class="left_col scroll-view">
        <div class="navbar nav_title" style="border: 0;">
            <a asp-controller="Home" asp-action="Index" class="site_title"><i class="fa fa-language"></i> <span>A+ plus</span></a>
        </div>
        <div class="clearfix"></div>
        <!-- menu profile quick info -->
        <div class="profile clearfix">
            <div class="profile_pic">
                <img src='~/images/perfiles/@User.FindFirst("Imagen").Value' alt="..." class="img-circle profile_img">
            </div>
            <div class="profile_info">
                <span>Welcome,</span>
                <h2>@User.Identity.Name</h2>
                @* <h2>@User.FindFirst("UsuarioId")</h2> *@
            </div>
        </div>
        <!-- /menu profile quick info -->
        <br />
        <!-- sidebar menu -->
        <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
            <div class="menu_section">
                <ul class="nav side-menu">
                    <li>
                        <a asp-controller="Home" asp-action="Index">
                            <i class="fa fa-home"></i>
                            Inicio
                        </a>
                    </li>
                </ul>
            </div>

            <div class="menu_section">
                <h3>CONTROL ACCESSO</h3>
                <ul class="nav side-menu">
                    @if (User.IsInRole("Cajera") || User.IsInRole("Admin"))
                    {
                        <li>
                            <a asp-controller="Persona" asp-action="Index">
                                <i class="fa fa-user"></i>
                                Personas
                            </a>
                        </li>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <li>
                            <a asp-controller="Dispositivo" asp-action="Index">
                                <i class="fa fa-desktop"></i>
                                Dispositivo
                            </a>
                        </li>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <li>
                            <a asp-controller="Area" asp-action="Index">
                                <i class="fa fa-shield"></i>
                                Areas
                            </a>
                        </li>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <li>
                            <a asp-controller="Horario" asp-action="Index">
                                <i class="fa fa-clock-o"></i>
                                Horario
                            </a>
                        </li>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <li>
                            <a asp-controller="ReglasAcceso" asp-action="Index">
                                <i class="fa fa-shield"></i>
                                Regla de Acceso
                            </a>
                        </li>
                    }
                </ul>
            </div>
            @if (User.IsInRole("Admin"))
            {
                <div class="menu_section">
                    <h3>Configuracion de Sistema</h3>
                    <ul class="nav side-menu">
                        <li>
                            <a asp-controller="Rol" asp-action="Index">
                                <i class="fa fa-pencil-square"></i>
                                Roles y acceso
                            </a>
                        </li>
                    </ul>
                </div>
            }
            <div class="menu_section">
                <h3>GYM</h3>
                <ul class="nav side-menu">
                    @if (User.IsInRole("Cajera") || User.IsInRole("Admin"))
                    {
                        <li>
                            <a asp-controller="Inscripcion" asp-action="Index">
                                <i class="fa fa-pencil-square"></i>
                                Inscripcion
                            </a>
                        </li>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <li>
                            <a asp-controller="Paquete" asp-action="Index">
                                <i class="fa fa-dropbox"></i>
                                Paquetes
                            </a>
                        </li>
                    }
                </ul>
            </div>
            <div class="menu_section">
                <h3>Contabilidad</h3>
                <ul class="nav side-menu">
                    @if (User.IsInRole("Admin"))
                    {
                        <li>
                            <a asp-controller="Gasto" asp-action="Index">
                                <i class="fa fa-info-circle"></i>
                                Configuracion Usuario
                            </a>
                        </li>
                    }
                 @*    @if (User.IsInRole("Admin"))
                    {
                        <li>
                            <a asp-controller="Caja" asp-action="Index">
                                <i class="fa fa-bank"></i>
                                Resumen(descartado)
                            </a>
                        </li>
                    } *@
                    @if (User.IsInRole("Admin"))
                    {
                        <li>
                            <a asp-controller="PlanCuentaGrupo" asp-action="Index">
                                <i class="fa fa-bank"></i>
                                Plan de Cuentas
                            </a>
                        </li>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <li>
                            <a asp-controller="Movimiento" asp-action="Index">
                                <i class="fa fa-line-chart"></i>
                                Movimientos Generales
                            </a>
                        </li>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <li>
                            <a asp-controller="ReciboEgreso" asp-action="Create">
                                <i class="fa fa-arrow-right"></i>
                                Recibo Egreso
                            </a>
                        </li>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <li>
                            <a asp-controller="ReciboIngreso" asp-action="Create">
                                <i class="fa fa-arrow-left"></i>
                                Recibo Ingreso
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <!-- /sidebar menu -->

    <!-- /menu footer buttons -->
    <div class="sidebar-footer hidden-small">
        <a data-toggle="tooltip" data-placement="top" title="Settings">
            <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
        </a>
        <a data-toggle="tooltip" data-placement="top" title="FullScreen">
            <span class="glyphicon glyphicon-fullscreen" aria-hidden="true"></span>
        </a>
        <a data-toggle="tooltip" data-placement="top" title="Lock">
            <span class="glyphicon glyphicon-eye-close" aria-hidden="true"></span>
        </a>
        <a data-toggle="tooltip" data-placement="top" title="Logout" href="login.html">
            <span class="glyphicon glyphicon-off" aria-hidden="true"></span>
        </a>
    </div>
    <!-- /menu footer buttons -->
</div>
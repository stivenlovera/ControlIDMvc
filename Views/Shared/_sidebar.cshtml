            <div class="menu_section">
                <h3>Sistema</h3>
                <ul class="nav side-menu">
                    <li>
                        <a asp-controller="Rol" asp-action="Index">
                            <i class="fa fa-pencil-square"></i>
                            Roles y acceso 
                        </a>
                    </li>
                </ul>
            </div>
            <div class="menu_section">
                <h3>Recepcion</h3>
                <ul class="nav side-menu">
                    <li>
                        <a asp-controller="Inscripcion" asp-action="Index">

@using Microsoft.AspNetCore.Identity

<div class="col-md-3 left_col">
    <div class="left_col scroll-view">
        <div class="navbar nav_title" style="border: 0;">
            <a href="index.html" class="site_title"><i class="fa fa-language"></i> <span>A+ plus</span></a>
        </div>
        <div class="clearfix"></div>
        <!-- menu profile quick info -->
        <div class="profile clearfix">
            <div class="profile_pic">
                <img src="~/assets/images/img.jpg" alt="..." class="img-circle profile_img">
            </div>
            <div class="profile_info">
                <span>Welcome,</span>
                <h2>Ali Stiven Lovera</h2>
            </div>
        </div>
        <!-- /menu profile quick info -->
        <br />
        <!-- sidebar menu -->
        <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
            <div class="menu_section">
                <ul class="nav side-menu">
                    <li>
                        <a href="javascript:void(0)">
                            <i class="fa fa-home"></i>
                            Inicio
                        </a>
                    </li>
                </ul>
            </div>
            @if (User.IsInRole("admin"))
            {
                <div class="menu_section">
                    <h3>CONTROL ACCESSO</h3>
                    <ul class="nav side-menu">

                        <li>
                            <a asp-controller="Persona" asp-action="Index">
                                <i class="fa fa-user"></i>
                                Personas
                            </a>
                        </li>

                        <li>
                            <a href="javascript:void(0)">
                                <i class="fa fa-group"></i>
                                Grupos
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Visitante" asp-action="Index">
                                <i class="fa fa-user"></i>
                                Visitantes
                            </a>
                        </li>
                        <li>
                            <a href="javascript:void(0)">
                                <i class="fa fa-code-fork"></i>
                                Departamentos
                            </a>
                        </li>

                        <li>
                            <a href="javascript:void(0)">
                                <i class="fa fa-users"></i>
                                Grupo Visitante
                            </a>
                        </li>

                        <li>
                            <a href="javascript:void(0)">
                                <i class="fa fa-industry"></i>
                                Empresas
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Dispositivo" asp-action="Index">
                                <i class="fa fa-desktop"></i>
                                Dispositivo
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Area" asp-action="Index">
                                <i class="fa fa-shield"></i>
                                Areas
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Horario" asp-action="Index">
                                <i class="fa fa-clock-o"></i>

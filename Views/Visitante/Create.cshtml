@{
    ViewData["Title"] = "Create Visitante";
}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Visita</h3>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12 ">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Nueva visita</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Datos de la visita <small></small></h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="col-md-3 col-sm-3 profile_left">
                            <!-- foto -->
                            <div class="profile_img">
                                <div id="crop-avatar">
                                    <!-- Current avatar -->
                                    <img class="img-responsive avatar-view" src="~/assets/images/profile_user.jpg"
                                        width="100%" height="100%" alt="Avatar" title="Change the avatar">
                                </div>
                            </div>
                            <div class="text-center m-2">
                                <button type="button" class="btn btn-success btn-xs"> Selecione una foto</button>
                                <button type="button" class="btn btn-success btn-xs" disabled>Eliminar foto</button>
                            </div>
                            <hr>
                            <!-- Document Identidad -->
                            <div class="profile_img">
                                <div id="crop-avatar">
                                    <!-- Current avatar -->
                                    <img class="img-responsive avatar-view" src="~/assets/images/profile_document.jpg"
                                        width="100%" height="100%" alt="Avatar" title="Change the avatar">
                                </div>
                            </div>
                            <div class="text-center m-2">
                                <button type="button" class="btn btn-success btn-xs"> Selecione una foto</button>
                                <button type="button" class="btn btn-success btn-xs" disabled>Eliminar foto</button>
                            </div>
                            <!-- end of skills -->
                        </div>
                        <div class="col-md-9 col-sm-9 ">
                            <!-- end of user-activity-graph -->
                            <div class="" role="tabpanel" data-example-id="togglable-tabs">
                                <ul class="nav nav-tabs bar_tabs" id="myTab" role="tablist">
                                    <li class="nav-item">
                                        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home"
                                            role="tab" aria-controls="home" aria-selected="true">General</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" id="qr-tab" data-toggle="tab" href="#qr" role="tab"
                                            aria-controls="qr" aria-selected="true">QR Code</a>
                                    </li>
                                </ul>
                                <div id="myTabContent" class="tab-content">
                                    <div class="tab-pane fade show active" id="home" role="tabpanel"
                                        aria-labelledby="home-tab">
                                        <!-- start recent activity -->
                                        <h6 class="p-2"><strong>Información personal del visitante</strong></h6>
                                        <div class="clearfix"></div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="item form-group">
                                                    <label class="col-form-label col-md-2 col-sm-2"
                                                        for="nombre">Nombre<span class="required">*</span>
                                                    </label>
                                                    <div class="col-md-10 col-sm-10">
                                                        <input type="text" id="nombre" required="nombre"
                                                            class="form-control" placeholder="">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="item form-group">
                                                    <label class="col-form-label col-md-4 col-sm-4" for="documento">N.
                                                        de documento<span class="required">*</span>
                                                    </label>
                                                    <div class="col-md-8 col-sm-8">
                                                        <input type="text" id="documento" required="documento"
                                                            placeholder="" class="form-control">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="item form-group">
                                                    <label class="col-form-label col-md-4 col-sm-4" for="tipo">Tipo
                                                        <span class="required">*</span>
                                                    </label>
                                                    <div class="col-md-8 col-sm-8">
                                                        <select id="heard" class="form-control" required>
                                                            <option value="" selected>CI</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="item form-group">
                                                    <label class="col-form-label col-md-2 col-sm-2"
                                                        for="empresa_visita">Empresa del Visitante:<span
                                                            class="required">*</span>
                                                    </label>
                                                    <div class="col-md-10 col-sm-10">
                                                        <input type="text" id="empresa_visita" required="empresa_visita"
                                                            class="form-control" placeholder="">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="item form-group">
                                                    <label class="col-form-label col-md-2 col-sm-2"
                                                        for="grupo_visita">Grupos de Visitantes:<span
                                                            class="required">*</span>
                                                    </label>
                                                    <div class="col-md-10 col-sm-10">
                                                        <input type="text" id="grupo_visita" required="grupo_visita"
                                                            class="form-control" placeholder="">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="item form-group">
                                                    <label class="col-form-label col-md-2 col-sm-2"
                                                        for="observaciones">Observaciones<span class="required">*</span>
                                                    </label>
                                                    <div class="col-md-10 col-sm-10">
                                                        <input type="text" id="observaciones" required="observaciones"
                                                            class="form-control" placeholder="">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="item form-group">
                                                    <label class="col-form-label col-md-2 col-sm-2"
                                                        for="telefono">Telefono<span class="required">*</span>
                                                    </label>
                                                    <div class="col-md-10 col-sm-10">
                                                        <input type="text" id="telefono" required="telefono"
                                                            class="form-control" placeholder="">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="item form-group">
                                                    <label class="col-form-label col-md-2 col-sm-2"
                                                        for="email">Email<span class="required">*</span>
                                                    </label>
                                                    <div class="col-md-10 col-sm-10">
                                                        <input type="text" id="email" required="email"
                                                            class="form-control" placeholder="">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div class="checkbox">
                                                <label class="">
                                                    <div class="icheckbox_flat-green checked"
                                                        style="position: relative;"><input type="checkbox" class="flat"
                                                            checked="checked"
                                                            style="position: absolute; opacity: 0;"><ins
                                                            class="iCheck-helper"
                                                            style="position: absolute; top: 0%; left: 0%; display: block; width: 100%; height: 100%; margin: 0px; padding: 0px; background: rgb(255, 255, 255); border: 0px; opacity: 0;"></ins>
                                                    </div> Lista de excepciones
                                                </label>
                                            </div>
                                        </div>
                                        <h6 class="p-2"><strong>Empresa visitante</strong></h6>
                                        <div class="clearfix"></div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="item form-group">
                                                    <label class="col-form-label col-md-2 col-sm-2"
                                                        for="empresa_visita">Empresa a Visitar<span
                                                            class="required">*</span>
                                                    </label>
                                                    <div class="col-md-10 col-sm-10">
                                                        <select id="empresa_visita" class="form-control" required>
                                                            <option value="" selected>test</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="item form-group">
                                                    <label class="col-form-label col-md-2 col-sm-2"
                                                        for="cantidad">Cantidad de personas presentes<span
                                                            class="required">*</span>
                                                    </label>
                                                    <div class="col-md-10 col-sm-10">
                                                        <input type="text" id="cantidad" required="cantidad"
                                                            class="form-control" placeholder="">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="item form-group">
                                                    <label class="col-form-label col-md-2 col-sm-2"
                                                        for="contacto_respomsable">Contacto responsable<span
                                                            class="required">*</span>
                                                    </label>
                                                    <div class="col-md-10 col-sm-10">
                                                        <input type="text" id="contacto_respomsable" required="color"
                                                            class="form-control" placeholder="">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <h6 class="p-2"><strong>Autorizacion</strong></h6>
                                        <div class="clearfix"></div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="item form-group">
                                                    <label class="col-form-label col-md-4 col-sm-4" for="documento">N.
                                                        de documento<span class="required">*</span>
                                                    </label>
                                                    <div class="col-md-8 col-sm-8">
                                                        <input type="datetime-local" name="fecha_autorizacion"
                                                            step="3600" class="form-control">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="item form-group">
                                                    <div class="checkbox pt-2">
                                                        <label>
                                                            <input type="checkbox" class="flat" checked="checked">
                                                            Expirar sólo al plazo estipulado
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <h6 class="p-2"><strong>Tarjeta</strong></h6>
                                        <div class="clearfix"></div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="item form-group">
                                                    <label class="col-form-label col-md-2 col-sm-2"
                                                        for="tarjeta_usada">Añadir Tarjeta Usada<span
                                                            class="required">*</span>
                                                    </label>
                                                    <div class="col-md-10 col-sm-10">
                                                        <select id="tarjeta_usada" class="form-control" required>
                                                            <option value="" selected>test</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="item form-group">
                                                    <button type="button"
                                                        class="btn btn-success btn-xs">Registrar</button>
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="item form-group">
                                                    <label class="col-form-label col-md-2 col-sm-2"
                                                        for="area_codigo">Tarjeta (Área,Código)<span
                                                            class="required">*</span>
                                                    </label>
                                                    <div class="col-md-10 col-sm-10">
                                                        <input type="text" id="area_codigo" required="area_codigo"
                                                            class="form-control" readonly>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="item form-group">
                                                    <button type="button" class="btn btn-success btn-xs">Añadir</button>
                                                </div>
                                            </div>
                                        </div>
                                        <h6 class="p-2"><strong>Biometría</strong></h6>
                                        <div class="clearfix"></div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="item form-group">
                                                    <label class="col-form-label col-md-2 col-sm-2"
                                                        for="domicilio">Añadir huella dactilar usando<span
                                                            class="required">*</span>
                                                    </label>
                                                    <div class="col-md-10 col-sm-10">
                                                        <select id="tarjeta_usada" class="form-control" required>
                                                            <option value="" selected>test</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="item form-group">
                                                    <label class="col-form-label col-md-2 col-sm-2"
                                                        for="barrio">Biometría<span class="required">*</span>
                                                    </label>
                                                    <div class="col-md-10 col-sm-10">
                                                        <input type="text" id="barrio" required="barrio"
                                                            class="form-control"
                                                            placeholder="no hay huellas registradas" readonly>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="item form-group">
                                                    <button type="button"
                                                        class="btn btn-success btn-xs">Iniciar</button>
                                                    <button type="button"
                                                        class="btn btn-success btn-xs">Eliminar</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="tab-pane fade show" id="qr" role="tabpanel" aria-labelledby="qr-tab">
                                        <div class="profile_img text-center ">
                                            <div id="crop-avatar">
                                                <!-- Current avatar -->
                                                <img class="img-responsive avatar-view" src="~/assets/images/qr.bmp"
                                                    width="50%" height="50%" alt="Avatar" title="Change the avatar">
                                            </div>
                                        </div>
                                        <div class="text-center m-2">
                                            <button type="button" class="btn btn-success btn-xs">Generar</button>
                                            <button type="button" class="btn btn-success btn-xs">Borrar</button>
                                        </div>
                                    </div>
                                    <!-- end recent activity -->
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function init_IonRangeSlider() {
        $("#range").ionRangeSlider({
            hide_min_max: true,
            keyboard: true,
            min: 0,
            max: 5000,
            from: 1000,
            to: 4000,
            type: 'double',
            step: 1,
            prefix: "$",
            grid: true
        });
    }
</script>